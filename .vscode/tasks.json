{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Kaenx.Creator/Kaenx.Creator.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish windows",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/OpenKNX.Toolbox.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c", "Release",
                "-r", "win-x86",
                "--self-contained",
                "-p:PublishSingleFile=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish linux",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/OpenKNX.Toolbox.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c", "Release",
                "-r", "linux-x64",
                "--self-contained",
                "-p:PublishSingleFile=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Kaenx.Creator/Kaenx.Creator.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}